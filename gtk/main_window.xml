<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.10"/>
  <object class="GtkApplicationWindow" id="main_window">
    <property name="can_focus">False</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header_bar">
        <property name="custom-title">view_box</property>
        <child>
          <object class="GtkButtonBox" id="view_box">
            <property name="layout-style">center</property>
            <property name="homogeneous">True</property>
            <property name="orientation">horizontal</property>
            <property name="sensitive">False</property>
            <style>
              <class name="linked"/>
            </style>
            <child>
              <object class="GtkRadioButton" id="roster_button">
                <property name="label" translatable="yes">Roster</property>
                <property name="active">True</property>
                <property name="receives-default">False</property>
                <property name="draw-indicator">False</property>
              </object>
            </child>
            <child>
              <object class="GtkRadioButton" id="conversations_button">
                <property name="label" translatable="yes">Conversations</property>
                <property name="group">roster_button</property>
                <property name="active">True</property>
                <property name="receives-default">True</property>
                <property name="draw-indicator">False</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="logobutton">
            <property name="label">‚ùß</property>
            <!--<property name="image">logo_image</property>
            <style>
              <class name="logobutton" />
            </style>
            <child>
              <object class="GtkImage" id="logo_image">
                <property name="file">res/logo.png</property>
              </object>
            </child>-->
          </object>
          <packing>
            <property name="position">0</property>
          </packing>
        </child>
        <child>
          <object class="GtkButton" id="new_chat_button">
            <property name="label">+</property>
            <style>
              <class name="primary" />
            </style>
          </object>
          <packing>
            <property name="position">1</property>
          </packing>
        </child>
        <child>
          <object class="GtkSearchEntry" id="search_entry">
          </object>
          <packing>
            <property name="pack-type">end</property>
          </packing>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="main_view_box">
        <property name="orientation">horizontal</property>
        <property name="homogeneous">False</property>
      </object>
    </child>
  </object>
</interface>
